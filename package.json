{
  "name": "neo-one",
  "version": "0.0.2",
  "description": "NEOâ€¢ONE is a suite of tools and frameworks for developing dapps on the NEO blockchain.",
  "repository": "https://github.com/neo-one-suite/neo-one",
  "bugs": "https://github.com/neo-one-suite/neo-one/issues",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/*/*"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "yarn run prettier --write --config .prettierrc",
      "git add",
      "yarn test --findRelatedTests --ci --passWithNoTests -w 4"
    ],
    "packages/*/template/**/*.js": [
      "yarn run prettier --write --config .prettierrc --parser flow",
      "git add"
    ],
    "scripts/**/*.js": [
      "yarn run prettier --write --config .prettierrc --parser flow",
      "git add"
    ],    
    "scripts/**/*.ts": [
      "yarn run prettier --write --config .prettierrc",
      "git add"
    ]
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "precommit": "lint-staged && tsc && tslint --project .",
    "bootstrap": "yarn run build && lerna bootstrap",
    "build": "rm -rf ./packages/*/dist && rm -rf ./packages/*/dist-ts && yarn run ts-node --max-old-space-size 16384 --project tsconfig.cli.json ./scripts/build/entry/build.ts",
    "watch": "yarn run ts-node --max-old-space-size 16384 --project tsconfig.cli.json ./scripts/build/entry/watch.ts",
    "publish": "yarn run build && lerna publish",
    "pretest-coverage": "ts-node ./scripts/test/pretest.ts",
    "posttest-coverage": "ts-node ./scripts/test/posttest.ts",
    "test": "jest",
    "test-coverage": "yarn run test --coverage",
    "test-ci": "jest -w 1",
    "e2e": "jest --config e2e.json",
    "e2e-ci": "jest --config e2e.json -w 1",
    "tsc": "tsc",
    "nit:source": "prettier --config .prettierrc --list-different \"packages/*/src/**/*.ts\"",
    "nit:template": "prettier --config .prettierrc --list-different \"packages/*/template/**/*.js\" --parser flow",
    "nit:scripts": "prettier --config .prettierrc --list-different \"scripts/**/*.ts\"",
    "nit": "yarn run nit:source && yarn run nit:template && yarn run nit:scripts",
    "prettier:source": "prettier --config .prettierrc --write \"packages/*/src/**/*.ts\"",
    "prettier:template": "prettier --config .prettierrc --write \"packages/*/template/**/*.js\" --parser flow",
    "prettier:scripts": "prettier --config .prettierrc --write \"scripts/**/*.ts\"",
    "prettier:all": "yarn run prettier:source && yarn run prettier:template && yarn run prettier:scripts",
    "lint": "tslint --project .",
    "docker:windows:build": "pushd ./scripts/docker/windows && eval $(docker-machine env 2016) && docker build . -t neo-one/build-windowsservercore:ltsc2016 -f Dockerfile.build && eval $(docker-machine env -unset) && popd",
    "docker:windows:test": "pushd ./scripts/docker/windows && eval $(docker-machine env 2016) && docker build . -t neo-one/test-windowsservercore:ltsc2016 -f Dockerfile.test && eval $(docker-machine env -unset) && popd",
    "docker:linux:build": "pushd ./scripts/docker/linux && eval $(docker-machine env -unset) && docker build . -t neo-one/build-linux:8.9.3 -f Dockerfile.build && popd",
    "docker:linux:test": "pushd ./scripts/docker/linux && eval $(docker-machine env -unset) && docker build . -t neo-one/test-linux:8.9.3 -f Dockerfile.test && popd",
    "verify-storage": "ts-node --max-old-space-size=8192 ./scripts/verify/storage.ts",
    "generate-sc-types": "ts-node ./packages/neo-one-smart-contract-compiler/src/scripts/generateTypes.ts"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.49",
    "@babel/core": "7.0.0-beta.49",
    "@babel/node": "7.0.0-beta.49",
    "@babel/plugin-proposal-async-generator-functions": "7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.49",
    "@babel/plugin-proposal-export-namespace-from": "7.0.0-beta.49",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.49",
    "@babel/plugin-proposal-optional-catch-binding": "7.0.0-beta.51",
    "@babel/polyfill": "7.0.0-beta.49",
    "@babel/preset-env": "7.0.0-beta.49",
    "@babel/preset-typescript": "7.0.0-beta.49",
    "@types/bs58": "3.0.30",
    "@types/core-js": "2.5.0",
    "@types/fs-extra": "5.0.2",
    "@types/google-cloud__storage": "1.1.7",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jest": "23.0.0",
    "@types/js-priority-queue": "0.0.5",
    "@types/koa": "2.0.46",
    "@types/koa-compress": "2.0.8",
    "@types/koa-mount": "3.0.1",
    "@types/koa-router": "7.0.28",
    "@types/lodash": "4.14.109",
    "@types/lru-cache": "4.1.1",
    "@types/node": "10.1.4",
    "@types/node-cron": "1.2.0",
    "@types/node-fetch": "2.1.1",
    "@types/rollup": "0.54.0",
    "@types/tar": "4.0.0",
    "@types/through": "0.0.29",
    "app-root-dir": "1.0.2",
    "babel-core": "7.0.0-bridge.0",
    "fs-extra": "6.0.1",
    "husky": "0.14.3",
    "jest": "23.1.0",
    "jest-environment-node": "23.1.0",
    "lerna": "2.11.0",
    "lint-staged": "7.1.3",
    "lodash": "4.17.10",
    "prettier": "1.13.5",
    "rollup": "0.60.1",
    "rollup-plugin-babel": "4.0.0-beta.4",
    "rollup-plugin-json": "3.0.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-typescript2": "0.15.0",
    "rxjs-tslint-rules": "4.4.1",
    "tmp": "0.0.33",
    "ts-jest": "22.4.6",
    "ts-node": "6.1.1",
    "tslint": "5.10.0",
    "tslint-clean-code": "0.2.7",
    "tslint-config-prettier": "1.13.0",
    "tslint-consistent-codestyle": "1.13.1",
    "tslint-immutable": "4.6.0",
    "tslint-language-service": "0.9.9",
    "tslint-microsoft-contrib": "5.0.3",
    "tslint-sonarts": "1.7.0",
    "typescript": "2.9.1"
  },
  "resolutions": {
    "ajv": "6.5.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.0.1",
    "bn.js": "4.11.8",
    "grpc": "1.12.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.(js|ts)",
      "!**/bin/**",
      "!**/__mocks__/**",
      "!**/__tests__/**",
      "!**/__data__/**",
      "!**/__e2e__/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [
            "@babel/preset-typescript",
            [
              "@babel/preset-env",
              {
                "useBuiltIns": false,
                "modules": "commonjs"
              }
            ]
          ],
          "plugins": [
            "@babel/plugin-proposal-async-generator-functions",
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-proposal-object-rest-spread",
            "@babel/plugin-proposal-export-namespace-from",
            "@babel/plugin-proposal-optional-catch-binding"
          ]
        }
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/decls/.*",
      "<rootDir>/packages/neo-one-node-neo-settings/src/test.js",
      "<rootDir>/migrate/.*",
      "<rootDir>/packages/.*/template/.*",
      "<rootDir>/packages/.*/__e2e__/.*"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!ix)",
      "<rootDir>/packages/.*/dist/.*"
    ],
    "snapshotSerializers": [
      "./scripts/serializers/blockchain.js",
      "./scripts/serializers/bn.js",
      "./scripts/serializers/buffer.js"
    ],
    "setupTestFrameworkScriptFile": "./scripts/test/jestSetup.js"
  }
}
